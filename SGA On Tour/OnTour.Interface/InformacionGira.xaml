<UserControl x:Class="OnTour.Interface.InformacionGira"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnTour.Interface"
        mc:Ignorable="d"
        Height="450" Width="800" Background="White">
    <Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="#FFFFC1C1">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">Informacion Gira</TextBlock>
        </Grid>
        <StackPanel Width="500" Height="300" HorizontalAlignment="Left">
            <StackPanel Height="50" VerticalAlignment="Top">
                <Label HorizontalAlignment="Center">Paquete Turistico</Label>
            </StackPanel>
            <StackPanel Height="50" VerticalAlignment="Top">
                <Label VerticalAlignment="Center">Monto</Label>
                <Label>$xx.xxx</Label>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
